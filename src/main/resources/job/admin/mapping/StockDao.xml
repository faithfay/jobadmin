<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="job.admin.dao.StockDao">
    <insert id="saveStock" parameterType="job.admin.bean.StockBean" useGeneratedKeys="true" keyProperty="pkid">
        <selectKey resultType="int" keyProperty="gpkid" order="BEFORE">
          SELECT pkid FROM stock_group WHERE stockCategory = #{stockGroupBean.stockCategory}
        </selectKey>

        INSERT INTO stock_group(stockCategory)
        VALUES (#{stockCategory})
    </insert>
</mapper>