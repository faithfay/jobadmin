<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="job.admin.dao.TenlongDao">
    <insert id="save" parameterType="job.admin.bean.TenlongBean">
        INSERT INTO tenlong(catelogs,bookname,sell,imgurl,bookurl,checkdate) VALUES (#{catelogs},#{bookname},#{sell},#{imgurl},#{bookurl},#{checkdate})
    </insert>

    <!--大量新增-->
    <insert id="first" useGeneratedKeys="true" keyProperty="pkid">
        INSERT INTO tenlong(catelogs,bookname,sell,imgurl,bookurl,checkdate) VALUES
        <foreach item="item" collection="list" separator=",">
            (#{item.catelogs},#{item.bookname},#{item.sell},#{item.imgurl},#{item.bookurl},#{item.checkdate})
        </foreach>
    </insert>

    <delete id="delAll">
      DELETE FROM tenlong
    </delete>

    <select id="list" resultType="job.admin.bean.TenlongBean">
        SELECT pkid,catelogs,bookname,sell,imgurl,bookurl,checkdate from tenlong WHERE catelogs = #{catelog}
    </select>
</mapper>